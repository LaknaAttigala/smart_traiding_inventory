<?xml version="1.0" encoding="utf-8"?>
<flectra>
<template id="report_purchas_request_document">
    <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Shipping address:</strong>
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>

                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <h2>Purchase Request</h2>
                    <div t-if="o.name">
                      <strong>PQ Number:</strong>
                      <span t-field="o.name"/>
                    </div>
                     <div t-if="o.date_order">
                        <strong>Date:</strong>
                        <span t-field="o.date_order"/>
                    </div>
                    <div name="branch" t-if="o.branch_id" class="col-xs-3" groups="base_branch_company.group_multi_branch">
                        <strong>Branch:</strong>
                        <span t-field="o.branch_id"/>
                    </div>
                    <div t-if="o.partner_ref" >
                        <strong>Order Reference:</strong>
                        <span t-field="o.partner_ref"/>
                    </div>
                </div>  
            </div>

            
            

            <div class=" mt32 mb32">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Requested By</th>
                      <th>Contact No</th>
                      <th>Department</th>
                      <th>Designation</th>
                      <th>Deliver To</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><span t-field="user.name"/></td>
                      <td><span t-esc="request.env.user.employee_ids.mobile_phone" /></td>
                      <td><span t-esc="request.env.user.employee_ids.department_id.name"/></td>
                      <td><span t-esc="request.env.user.employee_ids.job_id.name"/></td>
                      <td><span t-field="o.cus_delivery_to"><span t-field="o.cus_delivery_to" /></span></td>
                    </tr>
                  </tbody>
                </table>

                <!-- or relational fields use this:

<span t-esc="','.join(o.user_id.mapped('employee_ids.department_id.display_name'))" />

For other fields use this:

<span t-esc="request.env.user.employee_ids.mobile_phone" /> -->
                
                
               
                
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Product Code</strong></th>
                        <th><strong>Description</strong></th>
                        <th ><strong>Taxes</strong></th>
                        <th class="text-right"><strong>Qty</strong></th>
                        <th class="text-center"><strong>Scheduled Date</strong></th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.product_id.cus_product_id"/>
                        </td>
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>                        
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.date_planned"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="border border-dark">
              
                <p>*Purchasing Department Use Only</p>
              
            
              <table class="table">
                
                <thead>
                  <tr>
                    <th>Approved By</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Approved Date</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><span t-field="o.cus_approved"></span></td>
                    <td><span t-field="o.cus_approved.employee_ids.department_id.name"/></td>
                    <td><span t-field="o.cus_approved.employee_ids.job_id.name"/></td>
                    <td><span t-field="o.cus_approved_date"/></td>
                    <!-- t-esc="request.env.user.employee_ids.mobile_phone"  -->
                  </tr>
                </tbody>

              </table>

           </div>

            <p t-field="o.notes"/>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_purchasrequest">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="smart_traiding_inventory.report_purchas_request_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</flectra>
